        <%= image_tag('1.jpg', style: "width: 160px; height: 160px; border-radius: 50%;")%>
        <h4>name</h4>
      </div>
    </div>
  </div>
  <hr>


  <div class="ml_2">
    <h1>Jobs(<%=@company.jobs.count%>)</h1>
    <div class="jobs_company">

      <% @jobs.each do |job| %>
          <div class="col-md-3">
            <%= link_to job_path(job) do %>
              <%= image_tag('1.jpg', style: "width: 100%; height: 150px;") %>
              <h4><%= job.title %></h4>
            <% end %>
          </div>
      <% end %>
      <div class="col-md-12 text-center">
      <hr>
        <%= link_to "More",company_jobs_path(@company) %>
      </div>

    </div>
  </div>
