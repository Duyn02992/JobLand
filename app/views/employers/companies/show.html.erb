<div class="container">
    <%= image_tag('2.jpg', style: "width: 100%; height:500px")%>
    <div class="row">
      <div class="col-lg-8">
        <h1 class="mt-4"><%= @company.full_name %></h1>
        <p class="lead">
          <%= time_ago_in_words(@company.created_at) %>
          ago
        </p>
        <hr>
        <p class="lead"><%= @company.descr %></p>
        <hr>
      </div>
      <div class="col-md-3" style="margin-top: 30px">
        <div class="card my-4">
          <h5 class="card-header"><%= t("global.job.company") %></h5>
            <ul>
              <li>
              	<i class="fa fa-map-marker" aria-hidden="true"></i>
                <%= @company.address%>
              </li>
              <li>
              	<i class="fa fa-envelope-o" aria-hidden="true"></i>
                <%= @company.email %>
              </li>
              <li>
              	<i class="fa fa-phone-square" aria-hidden="true"></i>
                <%= @company.phone %>
              </li>
            </ul>
        </div>
      </div>
    </div>
  </div>	