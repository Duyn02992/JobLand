<div class="row employer">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="wizard-container">
          <div class="card wizard-card" data-color="azure" id="wizard">
            <%= form_for [:employers, @jobs] , method: :post do |f|  %>
              <div class="wizard-header">
                <h3 class="wizard-title">Create Job Now</h3>
                <p class="category">Don't miss out on potential candidates!</p>
              </div>
              <div class="wizard-navigation">
                <div class="progress-with-circle">
                   <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
                </div>
                <ul>
                  <li>
                    <a href="#details" data-toggle="tab">
                      <div class="icon-circle">
                        <i class="ti-list"></i>
                      </div>
                      Details
                    </a>
                  </li>
                  <li>
                    <a href="#captain" data-toggle="tab">
                      <div class="icon-circle">
                        <i class="ti-briefcase"></i>
                      </div>
                      Timetable
                    </a>
                  </li>
                  <li>
                    <a href="#description" data-toggle="tab">
                      <div class="icon-circle">
                        <i class="ti-pencil"></i>
                      </div>
                      Description
                    </a>
                  </li>
                </ul>
              </div>
              <div class="tab-content">
                <div class="tab-pane" id="details">
                  <div class="row">
                    <div class="col-sm-12">
                      <h5 class="info-text"> Let's start with the basic details</h5>
                    </div>
                    <div class="col-sm-5 col-sm-offset-1">
                      <div class="form-group">
                        <label>Title:</label>
                         <%= f.text_field :title ,id: "exampleInputEmail1", class: "form-control"%>
                      </div>
                    </div>
                    <div class="col-sm-5 ">
                      <div class="form-group">
                        <label>Area</label>
                        <%= f.text_field :area , class: "form-control"%>
                      </div>
                    </div>
                    <div class="col-sm-5 col-sm-offset-1">
                      <div class="form-group">
                        <label>Grade:</label>
                         <%= f.text_field :grade , class: "form-control"%>
                      </div>
                    </div>
                    <div class="col-sm-5">
                      <div class="form-group">
                        <label>Exp</label>
                        <div class="input-group">
                          <%= f.number_field :exp , class: "form-control"%>
                          <span class="input-group-addon">Year</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-5 col-sm-offset-1">
                      <div class="form-group">
                        <label>Salary</label>
                        <div class="input-group">
                          <%= f.number_field :salary , class: "form-control"%>
                          <span class="input-group-addon">$</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-5">
                      <div class="form-group">
                        <label>Number</label>
                        <div class="input-group">
                          <%= f.number_field :number, class: "form-control"%>
                          <span class="input-group-addon">People</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="tab-pane" id="captain">
                  <h5 class="info-text">How do you want to rent the office? </h5>
                  <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                      <div class="sex"> 
                        <p>Gender:</p>
                          <%= f.radio_button :sex ,  "0" %> <%= f.label :Male %>
                          <%= f.radio_button :sex ,  "1" %> <%= f.label :Female %>
                          <%= f.radio_button :sex ,  "2" %> <label>Male&Female</label>
                        </div>
                        <p class="time-job">Time Job:</p>
                        <div class="col-sm-3  col-sm-offset-1">
                          <div class="row">
                            <%= f.radio_button :time_work ,  "0" %> <label>Part Time</label>
                          </div>
                        </div>
                        <div class="col-sm-3 ">
                          <div class="row">
                            <%= f.radio_button :time_work ,  "1" %> <label>Full Time</label>
                          </div>
                        </div>
                        <div class="col-sm-3 ">
                          <div class="row">
                            <%= f.radio_button :time_work ,  "1" %> <label>All</label>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
                <div class="tab-pane" id="description">
                  <div class="row">
                    <h5 class="info-text"> Tell us about your ideal working space. </h5>
                    <div class="col-sm-10 col-sm-offset-1">
                      <div>
                        <%= f.label :description %>
                      </div>
                      <div>
                        <%= f.cktext_area :info, class: "ckeditor" %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="wizard-footer">
                <div class="pull-right">
                  <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='Next' />
                  <%= f.submit  class: "btn btn-finish btn-fill btn-primary btn-wd"%>
                </div>
                <div class="pull-left">
                  <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Previous' />
                </div>
                <div class="clearfix"></div>
              </div>
            <% end %>
          </div>
        </div> <!-- wizard container -->
      </div>
    </div> <!-- row -->
  </div> <!--  big container -->
</div>
