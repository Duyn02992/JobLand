<div id="portfolio">
  <input type="button" class="btn btn-outline-secondary add" value=" + ">
</div>
<ul id="portfolios">
  <%= render @portfolios %>
</ul>

<script type="text/javascript">
  $(document).ready(function() {
    $('.form_portfolio').hide();
    $('#portfolio .add').on('click',function(event) {
      event.preventDefault();
      $('#portfolios').hide();
      $('.form_portfolio').remove();
    
    $.ajax({
      url:'<%= new_portfolio_path %>',
      method: 'GET',
      success: function(data){
        $('#portfolio').append(data);
      }
    });
  });

    $('#portfolios .edit-portfolio').on('click',function(event) {
      var id = $(this).data('id');
      event.preventDefault();
      $('[id^="portfolio"]').show();
      $('#portfolio-' + id).hide();
      $('.form_portfolio').remove();

      $.ajax({
        url: $(this).attr('href'),
        method: 'GET',
        success: function(data){
          $('#portfolio-' + id).before(data);
        }
      });
    });
  });
  
  $("#micropost_image").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
    }
  });
</script>