<div class="main-inner">
  <div class="blurred-image-overlay"></div>
  <div class="profile-header-wrapper">
    <div class="profile-header-cover-inner"></div>
    <div class="profile-header">
      <a class="ui-show-modal profile-photo-wrapper">
        <div class="profile-photo">
          <font class="profile-photo-size">
            <%= image_tag @user.image if @user.image.attached? %>
          </font>
        </div>
        <div class="edit-photo">
          <div class="icon-camera"></div>
          <font>
            Change photo
          </font>
        </div>
      </a>
        <header class="user-name-tags">
          <div class="profile-name-top">
            <div class="name-and-tagline">
              <h3>
                <%= @user.fullname %>
              </h3>
            </div>
          </div>
        </header>
      </div>
    </div>
  <div class="two-column col-md-12">
    <div class="row">
      <div class="column-main col-md-8" >
        <div class="user-introduction-div col-md-12">
          <div class="row">
            <h4 class="col-md-4">
              <%= t("userp.introduction") %>
            </h4>
            <div id='introduction'>
              <%= render "cvs/cv_introduction" %>
            </div>
          </div>
        </div>
        <div class="user-experience-div col-md-12">
          <div class="row">
            <h4 class="col-md-4">
              <%= t("userp.experience")%>
            </h4>
            <div id="experience_section">
              <%= render "experiences/experience_section" %>
            </div>
          </div>
        </div>
        <div class="user-skills-div col-md-12">
          <div class="row">
            <h4 class="col-md-4">
              <%= t("userp.skills")%>
            </h4>
            <div id="cv_skill_section">
              <%= render "cv_skills/skill_section" %>
            </div>
          </div>
        </div>
        <div class="user-education-div col-md-12">
          <div class="row">
            <h4 class="col-md-4">
              <%= t("userp.education")%>
            </h4>
            <div id="education_section">
              <%= render "educations/education_section" %>
            </div>
          </div>
        </div>
        <div class="user-language-div col-md-12">
          <div class="row">
            <h4 class="col-md-4">
              <%= t("userp.language")%>
            </h4>
            <div id="cv_language_section">
              <%= render "cv_languages/cv_language_section" %>
            </div>
          </div>
        </div>
        <div class="user-portfolio-div col-md-12">
          <div class="row">
            <h4 class="col-md-2">
              <%= t("userp.portfolio")%>
            </h4>
            <div id="portfolio_section">
              <%= render "portfolios/portfolio_section" %>
            </div>
          </div>
        </div>
      </div>


      <div class="column-side col-md-4">
        <div class="user-profile col-md-12 ">
          <section class="user-profile-aside-section contact-section row">
            <%= render "user_edit_profile" %>
            <h5>
              <font class="contact-to-colection">
                <%= t("userp.contact") %>
              </font>
            </h5>
            <div class="editable-attribute col-md-12 row">
              <div class="contact-line col-md-12">
                <div class="row">
                  <div class="icon-phone contact-icon col-md-2">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                  </div>
                  <div class="contact-value col-md-8">
                    <%= @user.phone %>
                  </div>
                </div>
              </div>
              <div class="contact-line col-md-12">
                <div class="row">
                  <div class="icon-email contact-icon col-md-2">
                    <i class="fa fa-envelope-o" aria-hidden="true"></i>
                  </div>
                  <div class="contact-value col-md-8">
                    <%= @user.email %>
                  </div>
                </div>
              </div>
              <div class="contact-line col-md-12">
                <div class="row">
                  <div class="icon-sex contact-icon col-md-2">
                    <i class="fa fa-venus-mars" aria-hidden="true"></i>
                  </div>
                  <div class="contact-value col-md-8">
                    <%= @user.sex %>
                  </div>
                </div>
              </div>
              <div class="contact-line col-md-12">
                <div class="row">
                  <div class="icon-dob contact-icon col-md-2">
                    <i class="fa fa-birthday-cake" aria-hidden="true"></i>
                  </div>
                  <div class="contact-value col-md-8">
                    <%= @user.dob %>
                  </div>
                </div>
              </div>
              <div class="contact-line col-md-12">
                <div class="row">
                  <div class="icon-email contact-icon col-md-2">
                    <i class="fa fa-home" aria-hidden="true"></i>
                  </div>
                  <div class="contact-value col-md-10">
                    <%= @user.address %>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
        <div class="clearfix"></div>
        <% if @user == current_user %>
          <%= link_to user_applyjobs_path(current_user), :action => 'go' do %>
          <div class="jobs-aready-applied" >
            <section class="user-jobs-aready-applied">
              <div class="icon-jobs-applied">
                  <i class="fa fa-briefcase fa-4x" aria-hidden="true"></i>
              </div>
              <div class="applied">
                <%= t("userp.applied") %>
              </div>
              <div id = "a_b_count">
                <%= @user.applyjobs.count %>
              </div>
            </section>
          </div>
          <% end %>
        <% end %>
        <div class="clearfix"></div>
        <% if @user == current_user %>
          <%= link_to user_bookmarks_path(current_user), :action => 'go' do %>
        <div class="user-saved-jobs">
          <section class="user-all-saved-jobs">
            <div class="icon-jobs-bookmark">
              <i class="fa fa-bookmark fa-4x" aria-hidden="true"></i>
            </div>
            <div class="jobs-saved">
              <%= t("userp.saveJob") %>
            </div>
            <div id = "a_b_count">
               <%= @user.bookmarks.count %>
            </div>
          </section>
        </div>
        <div class="more-action">
          <section class="more-action">

          </section>
        </div>
      <% end %>
    <% end %>
      </div>
    </div>
  </div>
</div>
